<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_color"
    tools:context=".DataListActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvdataposta"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="32dp"
        android:background="#01579B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/tvhomedata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_weight="1"
        android:background="#052739"
        android:fontFamily="@font/ubuntu_light"
        android:text="@string/title_row_user"
        android:textAlignment="center"
        android:textColor="#E7E4DA"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/rvdataposta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvhomedate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:background="#137898"
        android:fontFamily="@font/ubuntu_light"
        android:text="@string/title_row_date"
        android:textAlignment="center"
        android:textColor="@color/data_text_color"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvhomedata"
        app:layout_constraintStart_toEndOf="@+id/tvhomedata"
        app:layout_constraintTop_toTopOf="@+id/tvhomedata" />

    <TextView
        android:id="@+id/tvhometotalvalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:background="#0B4158"
        android:fontFamily="@font/ubuntu_light"
        android:text="@string/title_row_totalvalue"
        android:textAlignment="center"
        android:textColor="#E7E4DA"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvhomedate"
        app:layout_constraintStart_toEndOf="@+id/tvhomedate"
        app:layout_constraintTop_toTopOf="@+id/tvhomedate" />

    <TextView
        android:id="@+id/tvhomeprofitday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:background="#1EA6C0"
        android:fontFamily="@font/ubuntu_light"
        android:text="@string/title_row_profitday"
        android:textAlignment="center"
        android:textColor="@color/transparent_backcolor"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvhometotalvalue"
        app:layout_constraintStart_toEndOf="@+id/tvhometotalvalue"
        app:layout_constraintTop_toTopOf="@+id/tvhometotalvalue" />

    <TextView
        android:id="@+id/tvhomeprofittotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:background="#5CBBC8"
        android:fontFamily="@font/ubuntu_light"
        android:text="@string/title_row_profittotal"
        android:textAlignment="center"
        android:textColor="@color/transparent_backcolor"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvhomeprofitday"
        app:layout_constraintStart_toEndOf="@+id/tvhomeprofitday"
        app:layout_constraintTop_toTopOf="@+id/tvhomeprofitday" />

    <TextView
        android:id="@+id/tvhomepercentageday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:background="#1EA6C0"
        android:fontFamily="@font/ubuntu_light"
        android:text="@string/title_row_percentageday"
        android:textAlignment="center"
        android:textColor="@color/transparent_backcolor"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvhomeprofittotal"
        app:layout_constraintStart_toEndOf="@+id/tvhomeprofittotal"
        app:layout_constraintTop_toTopOf="@+id/tvhomeprofittotal" />

    <TextView
        android:id="@+id/tvhomepercentagetotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:background="#5CBBC8"
        android:fontFamily="@font/ubuntu_light"
        android:text="@string/title_row_percentagetotal"
        android:textAlignment="center"
        android:textColor="@color/transparent_backcolor"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvhomepercentageday"
        app:layout_constraintStart_toEndOf="@+id/tvhomepercentageday"
        app:layout_constraintTop_toTopOf="@+id/tvhomepercentageday" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabupdatascreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:clickable="true"
        app:backgroundTint="#80BBDEFB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/fab_adddatapost" />

</androidx.constraintlayout.widget.ConstraintLayout>